{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "../dist",
    "rootDir": "../src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "inlineSourceMap": true,
    "declaration": true
  }
}
